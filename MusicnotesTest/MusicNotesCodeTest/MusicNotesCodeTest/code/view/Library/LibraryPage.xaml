<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MusicNotesCodeTest.code.view.Library.LibraryPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Yellow"
  NavigationPage.BackButtonTitle="Back">
  <StackLayout Orientation="Vertical">
    <ListView x:Name="songList" BackgroundColor="Green" RowHeight="32">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Orientation="Horizontal" BackgroundColor="Silver">
                <Image Source="music-icon.png" HorizontalOptions="Start" HeightRequest="20" WidthRequest="20" VerticalOptions="Center" />
                <StackLayout Orientation="Vertical" BackgroundColor="Purple" HorizontalOptions="StartAndExpand">
                  <Label TextColor="Black" Text="{ Binding title }" BackgroundColor="Blue" HorizontalOptions="StartAndExpand" HeightRequest="12" />
                  <Label TextColor="Black" BackgroundColor="Red" Text="{Binding longDescription}" HorizontalOptions="StartAndExpand" HeightRequest="12" />
                </StackLayout>
                <Image Source="arrow-right.png" HorizontalOptions="End" Aspect="AspectFit" HeightRequest="12" WidthRequest="12" VerticalOptions="Center" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
  </StackLayout>
  
</ContentPage>