<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicNotesCodeTest.code.view.Song.SongPage">
  <ListView x:Name="songDetails" BackgroundColor="Green" RowHeight="32">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout Orientation="Horizontal" BackgroundColor="Silver">
            <Label HorizontalOptions="StartAndExpand" TextColor="Black" FontAttributes="Bold" Text="{ Binding Path=Category }" />
            <Label HorizontalOptions="EndAndExpand" TextColor="Black" Text="{ Binding Value }" HorizontalTextAlignment="End" />
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>